a.logo
  color black
  background-color white
  margin 1em auto
  border 7.5px solid black
  padding 0.75em
  font-weight 800
  box-sizing border-box
  height 50px
  font-size 2.5em
  width 50px
  display flex
  align-items center
  justify-content center
  flex-flow row wrap
  text-align center
  box-shadow 7.5px 7.5px 0 0 black
  transition all 0.5s
  text-decoration none

  &:hover
    box-shadow 0 0 0 0 black
