#popup
  width 100%
  height 100vh
  background-color white
  padding 1em
  box-sizing border-box
  display flex
  align-items center
  justify-content flex-start
  flex-flow column
  position fixed
  top 0
  left -100%
  z-index 2
  transition all 0.5s

  &.active
    left 0

  h1
    color black
    font-size 2.5em
    text-align center
    font-weight 800
    margin 0 auto

  p
    color black
    opacity 0.5
    font-weight 500
    font-size 1.25em

  a.repo
    background-color black
    color white
    text-align center
    padding 0.5em
    box-sizing border-box
    font-weight 500
    font-size 1.25em
    display flex
    align-items center
    justify-content center
    flex-flow row wrap
    transition all 0.5s
    border 2.5px solid transparent
    text-decoration none

    span
      &:before
        display block
        margin-right 0.5em

    &:hover
      background-color white
      color black
      border-color black

  h3
    color black
    text-align center
    font-weight 500
    font-size 1.5em

  nav
    a
      color black
      font-size 1.25em
      margin 0.5em
      text-decoration none

  a#closepopup
    color black
    opacity 0.5
    font-size 2em
    margin-left auto
    cursor pointer
    transition all 0.5s

    &:hover
      opacity 1

    span
      &:before
        display block
